<%- include('../partials/header.ejs') %>

<div>
    <% if (user) { %>
      <a href="/bmis/new">Add BMI</a>
      <a href="/bmis">View BMI</a>
      
      <% if (bmi) { %>
        <a href="/bmis/<%= bmi._id %>/bmis">Update BMI</a>
        <form action="/bmis/<%= bmi._id %>?_method=DELETE" method="POST" style="display:inline;">
          <button type="submit" onclick="return confirm('Are you sure you want to delete this BMI?')">Delete BMI</button>
        </form>
      <% } %>

      <a href="/auth/sign-out">Sign Out</a>
      <span><%= user.username %></span>
    <% } else { %>
      <a href="/auth/sign-up">Sign Up</a>
      <a href="/auth/sign-in">Sign In</a>
    <% } %>
  </div>

<%- include('../partials/footer.ejs')%>