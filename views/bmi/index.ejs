<%- include('../partials/header') %>

<section>
  <h1>Your BMI Records</h1>

  <!-- BMI Table -->
  <table>
    <thead>
      <tr>
        <th>Weight (lbs)</th>
        <th>Height (cm)</th>
        <th>BMI</th>
        <th>Date</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% if (bmiData.length === 0) { %>
        <tr>
          <td colspan="5">No BMI records found. Add your first BMI record below!</td>
        </tr>
      <% } else { %>
        <% bmiData.forEach(record => { %>
          <tr>
            <td><%= record.weight %></td>
            <td><%= record.height %></td>
            <td><%= record.bmi %></td>
            <td><%= new Date(record.date).toLocaleDateString() %></td>
            <td>
              <form method="POST" action="/bmi/<%= record._id %>?_method=DELETE">
                <button type="submit">Delete</button>
              </form>
            </td>
          </tr>
        <% }); %>
      <% } %>
    </tbody>
  </table>

  <!-- Add New BMI Form -->
  <h2>Add New BMI</h2>
  <form method="POST" action="/bmi">
    <label for="weight">Weight (lbs):</label>
    <input type="number" id="weight" name="weight" required>
    
    <label for="height">Height (cm):</label>
    <input type="number" id="height" name="height" required>
    
    <button type="submit">Calculate BMI</button>
  </form>
</section>

<%- include('../partials/footer') %>
